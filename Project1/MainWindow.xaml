<Window x:Class="Project1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Project1"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800"
        Loaded="Window_Loaded">
    <Grid>
        <ListBox x:Name="lbxMovies" HorizontalAlignment="Left" Height="297" Margin="25,65,0,0" VerticalAlignment="Top" Width="155" SelectionChanged="lbxMovies_SelectionChanged"/>
        <ListBox x:Name="lbxActors" HorizontalAlignment="Left" Height="297" Margin="226,65,0,0" VerticalAlignment="Top" Width="155"/>
        <ListBox x:Name="lbxFavorites" HorizontalAlignment="Left" Height="297" Margin="557,65,0,0" VerticalAlignment="Top" Width="155"/>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="31,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="82"><Run Language="en-ie" Text="Movies"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="226,39,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="82"><Run Language="en-ie" Text="Actors"/><LineBreak/><Run Language="en-ie"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Height="21" Margin="557,42,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="82"><Run Language="en-ie" Text="Favorites"/><LineBreak/><Run Language="en-ie"/></TextBlock>
        <Button x:Name="btnFav" Content="Favorite" HorizontalAlignment="Left" Height="23" Margin="25,388,0,0" VerticalAlignment="Top" Width="88" Click="Button_Click"/>
        <Button x:Name="btnUnfav" Content="Unfavorite" HorizontalAlignment="Left" Height="23" Margin="557,388,0,0" VerticalAlignment="Top" Width="89" Click="btnUnfav_Click"/>

    </Grid>
</Window>
